<Window x:Class="task_39_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_39_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Введите продукт" HorizontalAlignment="Center" Margin="8"/>
            <TextBox Name ="ProductName" Margin="0 0 0 10" Width="500"/>
            <Button Content="Добавить продукт" Click="Product_Click" Width="500"/>
            <ListBox x:Name="ProductList" Margin="5" Height="200" Width="500"  />
            <Button Content=" Сохранить" Click="List_Click" Width="500" Margin="10"/>





        </StackPanel>



    </Grid>
</Window>
